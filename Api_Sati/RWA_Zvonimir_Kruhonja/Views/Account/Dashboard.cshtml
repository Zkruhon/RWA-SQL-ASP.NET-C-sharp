@model Api_Sati.Models.Password

@{
    ViewBag.Title = "Dashboard";
}

@using (Html.BeginForm("Dashboard", "Account", FormMethod.Post))
{
    <fieldset>
        <legend style="font-size:4rem;color:darkorange;">PROFIL</legend>
        <table class="center">

            @if (Session["Ime"] != null)
            {
                <text>
                    Ime : @Session["Ime"].ToString()
                </text>
            }
            <br />

            @if (Session["Prezime"] != null)
            {
                <text>
                    Prezime: @Session["Prezime"].ToString()
                </text>
            }
            <br />
            @if (Session["Email"] != null)
            {
                <text>
                    Email: @Session["Email"].ToString()
                </text>
            }

            <tr>
                <td>Old Password</td>
                <td>
                    @Html.EditorFor(pass => pass.Pwd)
                </td>
                <td>@Html.ValidationMessageFor(pass => pass.Pwd)</td>
            </tr>
            <tr class="rowspace">
                <td>New Password</td>

                <td>
                    @Html.EditorFor(pass => pass.NewPwd)
                </td>
                <td>@Html.ValidationMessageFor(pass => pass.NewPwd)</td>
            </tr>

            <tr class="rowspace">
                <td colspan="3" id="button">
                    <input type="submit" value="Change Password" />
                </td>
            </tr>
            <tr class="rowspace"><td colspan="3">@ViewBag.Message</td></tr>
        </table>
    </fieldset>
}

